    <h3><%= f.label :password_confirmation %></h3> <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit "Create" %><br><br>
      <div class="strike">
        <span>or</span>
      </div><br>
    <%= link_to "Login with Google", '/auth/google' %>
  <% end %>
</div>
