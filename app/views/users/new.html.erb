<%= render 'common/sign_in_nav' %>

<% if @user.errors.any? %>
 <div>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
  </div>
<% end %>

<div class="test">
  <h1>Sign up for bizrev</h1><span id="vert"></span>
  <%= form_for @user do |f| %>
    <h4><%= f.label :username %>:</h4> <%= f.text_field :name %><br>
    <h4><%= f.label :password %>:</h4> <%= f.password_field :password %><br>
    <h4><%= f.label :password_confirmation %>:</h4> <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit "Create" %>
  <% end %>
</div>
